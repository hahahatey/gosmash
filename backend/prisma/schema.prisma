generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int                     @id @default(autoincrement())
  firstName           String                  @default("")
  lastName            String                  @default("")
  birthDate           DateTime                @default(now())
  telegramNickname    String                  @unique
  telegramId          BigInt?
  email               String                  @unique @default("")
  createdAt           DateTime                @default(now())
  updatedAt           DateTime                @updatedAt
  loginCodes          LoginCode[]
  refreshTokens       RefreshToken[]
  role                Role                    @default(PLAYER)
  tournaments         Tournament[]            @relation("OrganizerTournaments")
  templateTournaments TournamentTemplate[]    @relation("TemplateTournaments")
  participations      TournamentParticipant[]
}

model LoginCode {
  id        String   @id @default(uuid())
  code      String   @unique
  userId    Int
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([code])
  @@index([expiresAt])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

enum Role {
  PLAYER
  ORGANIZER
  ADMIN
}

model TournamentTemplate {
  id          Int          @id @default(autoincrement())
  name        String
  location    String
  description String?
  createdAt   DateTime     @default(now())
  tournaments Tournament[]
  organizerId Int
  organizer   User         @relation("TemplateTournaments", fields: [organizerId], references: [id])
}

model Tournament {
  id                 Int      @id @default(autoincrement())
  startsAt           DateTime
  registrationEndsAt DateTime
  createdAt          DateTime @default(now())
  fee                Float

  // Связи
  templateId  Int
  template    TournamentTemplate @relation(fields: [templateId], references: [id])
  organizerId Int
  organizer   User               @relation("OrganizerTournaments", fields: [organizerId], references: [id])

  participants TournamentParticipant[]
}

model TournamentParticipant {
  id           Int @id @default(autoincrement())
  tournamentId Int
  userId       Int

  tournament Tournament @relation(fields: [tournamentId], references: [id])
  user       User       @relation(fields: [userId], references: [id])

  @@unique([tournamentId, userId])
}
